<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BooksAppsMobile.Views.ListBookPage">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="{Binding Term}" HorizontalOptions="Center" />
            <ListView ItemsSource="{Binding Books}" HasUnevenRows="True"
                      IsRefreshing="{Binding IsBusy}" CachingStrategy="RetainElement" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="10">
                                <Image Source="{Binding Thumbnail}" Aspect="AspectFit" HeightRequest="50" WidthRequest="40" />
                                <StackLayout Spacing="2" >
                                    <Label Text="{Binding Title}" FontSize="16" />
                                    <Label Text="{Binding Authors}" FontSize="12" />
                                    <Label Text="{Binding PublishedDate}" FontSize="12" />
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>